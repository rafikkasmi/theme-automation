<script>
  function lmScrollText() {
    {% for block in section.blocks %}
      let timers{{ block.id }} = document.querySelectorAll('.countdown-timer-{{ block.id }}');
      timers{{ block.id }}.forEach(el => {
        const second = 1000,
          minute = second * 60,
          hour = minute * 60,
          day = hour * 24,
          wrapper = el,
          countDown = new Date('{{ block.settings.year }}-{{ block.settings.month }}-{{ block.settings.day }}T{{ block.settings.hour }}:{{ block.settings.minute }}:00Z').getTime();
  
        console.log('start timer, end date:' + countDown)
        const interval = setInterval(function () {
          let now = new Date().getTime(),
            distance = countDown - now,
            days = Math.floor(distance / day),
            hours = Math.floor((distance % day) / hour),
            minutes = Math.floor((distance % hour) / minute),
            seconds = Math.floor((distance % minute) / second);
  
          (wrapper.querySelector('.scroll-timer-days-{{ block.id }}').innerText = (
            days
          )),
            (wrapper.querySelector('.scroll-timer-hours-{{ block.id }}').innerText = (
              hours
            )),
            (wrapper.querySelector('.scroll-timer-minutes-{{ block.id }}').innerText = (
              minutes
            )),
            (wrapper.querySelector('.scroll-timer-seconds-{{ block.id }}').innerText = (
              seconds
            ));
  
          if (distance < 0) {
            wrapper.querySelector('.scroll-timer-days-{{ block.id }}').innerText = '00';
            wrapper.querySelector('.scroll-timer-hours'-{{ block.id }}).innerText = '00';
            wrapper.querySelector('.scroll-timer-minutes-{{ block.id }}').innerText = '00';
            wrapper.querySelector('.scroll-timer-seconds-{{ block.id }}').innerText = '00';
            {% if block.settings.hide_timer_on_completed %}
              wrapper.style.display = 'none';
            {% endif %}
            document.querySelector(
              '.countdown-timer-completed-text-{{ block.id }}'
            ).style.display = 'block';
  
            clearInterval(interval);
          }
  
        }, second);
        document.addEventListener('shopify:section:unload', function (event) {
          if (event.detail.sectionId === '{{ section.id }}') clearInterval(interval);
        });
      })
    {% endfor %}
  }

  document.addEventListener('DOMContentLoaded', lmScrollText);
  
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', lmScrollText);
     document.addEventListener('shopify:section:load', lmScrollText);
  }
</script>

