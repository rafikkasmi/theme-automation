<img id="Image-{{ image.id }}-{{ responsive_image_counter }}"
  class="responsive-image__image lazyload {{ image_class }}"
  src="{{ image | img_url: '1x' }}"
  data-src="{{ image | img_url: '3600x' }}"
  data-widths="[{{ widths }}]"
  data-aspectratio="{{ image.aspect_ratio }}"
  data-sizes="[{{ sizes }}]"
  tabindex="-1"
  alt="{{ image.alt | escape }}"
  {{ image_attributes }}
>