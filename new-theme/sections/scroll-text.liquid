
{%- style -%}
   .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ section.settings.padding_horizontal_mobile }}rem;
    padding-right: {{ section.settings.padding_horizontal_mobile }}rem;
    margin: 0 auto;
  }
  
  .section-{{ section.id }} {
    border-top: solid {{ section.settings.border_color }} {{ section.settings.border_thickness }}px;
    border-bottom: solid {{ section.settings.border_color }} {{ section.settings.border_thickness }}px;
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ section.settings.margin_horizontal_mobile }}rem;
    margin-right: {{ section.settings.margin_horizontal_mobile }}rem;
    border-radius: {{ section.settings.section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }

  .scrolling-wrap-{{ section.id }} {
    position: relative;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-wrap: nowrap;
    flex-wrap: nowrap;
    background-attachment: scroll !important;
    transform-origin: center;
    overflow: hidden;
  }

  .scrolling-list-{{ section.id }} {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    align-items: center;
    white-space: nowrap;
    background-attachment: scroll !important;
    -webkit-animation: ticker{{ section.id | replace: '-', '' }} {{ section.settings.scrolling_velocity_mobile | times: 2 }}s infinite linear;
    animation: ticker{{ section.id | replace: '-', '' }} {{ section.settings.scrolling_velocity_mobile | times: 2 }}s infinite linear;
    flex-shrink: 0;
  }

  .scrolling-item-{{ section.id }} {
    background-attachment: scroll !important;
    flex-shrink: 0;
    text-decoration: none;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
      margin-left: {{ section.settings.margin_horizontal }}rem;
      margin-right: {{ section.settings.margin_horizontal }}rem;
      border-radius: {{ section.settings.section_radius }}px;
    }
    
    .section-{{ section.id }}-padding {
      padding: 0 5rem;
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      padding-left: {{ section.settings.padding_horizontal }}rem;
      padding-right: {{ section.settings.padding_horizontal }}rem;
    }
    
    .scrolling-list-{{ section.id }} {
      animation-duration: {{ section.settings.scrolling_velocity | times: 2 }}s;
    }
  }
  
{%- endstyle -%}

{% unless section.settings.full_width %}
  <style>
    .section-{{ section.id }}-padding {
      max-width: {{ section.settings.content_width }}rem;
    }
  </style>
{% endunless %}

{% if section.settings.margin_horizontal_mobile > 0 %}
  <style>
    .section-{{ section.id }} {
      border-left: solid {{ section.settings.border_color }} {{ section.settings.border_thickness }}px;
      border-right: solid {{ section.settings.border_color }} {{ section.settings.border_thickness }}px;
    }
    
    @media(min-width: 1024px) {
      .section-{{ section.id }} {
        border-left: 0px;
        border-right: 0px;
      }
    }
  </style>
{% endif %}

{% if section.settings.margin_horizontal > 0 %}
  <style>
    @media(min-width: 1024px) {
      .section-{{ section.id }} {
        border-left: solid {{ section.settings.border_color }} {{ section.settings.border_thickness }}px;
        border-right: solid {{ section.settings.border_color }} {{ section.settings.border_thickness }}px;
      }
    }
  </style>
{% endif %}

{% if section.settings.reverse_direction %}
  <style>
    @keyframes ticker{{ section.id | replace: '-', '' }} {
      0% {
        transform: translateX(-100%);
      }
      100% {
        transform: translateX(0%);
      }
    }
  </style>
{% else %}
  <style>
    @keyframes ticker{{ section.id | replace: '-', '' }} {
      0% {
        transform: translateX(0%);
      }
      100% {
        transform: translateX(-100%);
      }
    }
  </style>
{% endif %}

{% if section.settings.pause_hover %}
  <style>
    .scrolling-wrap-{{ section.id }}:hover .scrolling-list-{{ section.id }} {
       animation-play-state: paused 
    }
  </style>
{% endif %}

{% for block in section.blocks %}
  {% if block.type == "text" %}
    <style>

      .scrolling-item-{{ block.id }} {
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
      }
      
      .scrolling-text-{{ block.id }} {
        margin: 0px;
        margin-right: {{ block.settings.text_mr_mobile }}px;
        font-size: {{ block.settings.text_size_mobile }}px;
        color: {{ block.settings.text_color }};
        line-height: {{ block.settings.text_height }}%;
        text-transform: unset;
        letter-spacing: 0px;
        text-decoration: none;
      }

      .scrolling-item-{{ block.id }} .scrolling-outlinel {
        -webkit-text-stroke: .01em {{ block.settings.text_color }};
        -webkit-text-fill-color: transparent;
      }
       .scrolling-item-{{ block.id }} svg path {
        fill: {{ block.settings.text_color }};
      }

      @media(min-width: 1024px) {
        .scrolling-text-{{ block.id }} {
          margin-right: {{ block.settings.text_mr }}px;
          font-size: {{ block.settings.text_size }}px;
        }
      }
    </style>

  {% elsif block.type == "button" %}

    <style>
      
      .scrolling-item-{{ block.id }}{
        margin-right: {{ block.settings.button_mr_mobile }}px;
      }
      
      .scrolling-button-{{ block.id }} {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        width: 100%;
        max-width: fit-content;
        margin: 0;
        font-size: {{ block.settings.button_size_mobile }}px;
        color: {{ block.settings.button_color }};
        line-height: {{ block.settings.button_height }}%;
        text-align: center;
        text-transform: unset;
        text-decoration: none;
        padding: {{ block.settings.button_padding_vertical_mobile }}px {{ block.settings.button_padding_horizontal_mobile }}px;
        border-radius: {{ block.settings.button_radius }}px;
        transition: all 0.25s ease 0s;
        position: relative;
        z-index: 2;
      }

      .scrolling-button-{{ block.id }}:hover {
        color: {{ block.settings.button_hover_color }};
        transition: all 0.25s ease 0s;
      }

      .scrolling-button-{{ block.id }} svg {
        width: 14px;
        height: 14px;
      }

      .scrolling-button-{{ block.id }} svg path {
        fill: {{ block.settings.button_color }};
        transition: all 0.25s ease 0s;
      }

      .scrolling-button-{{ block.id }}:hover svg path {
        fill: {{ block.settings.button_hover_color }};
        transition: all 0.25s ease 0s;
      }

      @media(min-width: 1024px) {

        .scrolling-item-{{ block.id }}{
          margin-right: {{ block.settings.button_mr }}px;
        }
        
        .scrolling-button-{{ block.id }} {
            padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
            font-size: {{ block.settings.button_size }}px;
        }
      }
    </style>

    {% if block.settings.button_style == "primary" or block.settings.button_style == "primary_arrow" %}
        <style>
          .scrolling-button-{{ block.id }} {
              background-color: {{ block.settings.button_bg_color }};
